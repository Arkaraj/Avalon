{
  "name": "avalon",
  "displayName": "Avalon",
  "description": "Assigning Tasks to members of a club/chapter",
  "publisher": "Arkaraj",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:Avalon-sidebar",
    "onCommand:avalon.documentation",
    "onCommand:avalon.authenticate",
    "onCommand:avalon.createRoom",
    "onCommand:avalon.joinRoom",
    "onCommand:avalon.refreshTask",
    "onView:Avalon-task"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Avalon-sidebar-view",
          "title": "Avalon",
          "icon": "media/avalon.svg"
        }
      ]
    },
    "views": {
      "Avalon-sidebar-view": [
        {
          "type": "webview",
          "id": "Avalon-sidebar",
          "name": "Avalon",
          "icon": "media/avalon.svg",
          "contextualTitle": "Avalon"
        },
        {
          "type": "webview",
          "id": "Avalon-task",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "avalon.refreshTask",
          "group": "navigation",
          "when": "view == Avalon-task"
        },
        {
          "command": "avalon.createRoom",
          "group": "navigation",
          "when": "view == Avalon-sidebar"
        }
      ]
    },
    "commands": [
      {
        "command": "avalon.documentation",
        "category": "Avalon",
        "title": "How to Use it?"
      },
      {
        "command": "avalon.authenticate",
        "category": "Avalon",
        "title": "Authenticate"
      },
      {
        "command": "avalon.createRoom",
        "category": "Avalon",
        "title": "Create Room",
        "icon": "$(add)"
      },
      {
        "command": "avalon.joinRoom",
        "category": "Avalon",
        "title": "Join Room"
      },
      {
        "command": "avalon.refreshTask",
        "category": "Avalon",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "watch-server": "cd avalon-api && npm run watch",
    "server": "cd avalon-api && npm run dev"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.8",
    "@types/polka": "^0.5.2",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "rollup": "^2.41.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.35.0",
    "svelte-check": "^1.2.3",
    "svelte-preprocess": "^4.6.9",
    "svelte-routing": "^1.5.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "polka": "^0.5.2"
  }
}
